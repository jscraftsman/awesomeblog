<div class="view">
  <div class="post box form">
<h1>Add a new post</h1>
<%= form_for @post do |f| %>
  <% if @post.errors.any? %>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %><br />
  <%= f.text_area :content %>
  <%= f.submit "Add post" %>
<% end %>

<div class="post_options"><%= link_to "back", :back, :class => "button" %></div>
</div>
</div>
