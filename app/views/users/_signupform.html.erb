<div class="form" id="signup_box">
  <%= form_for @user, :url => {:action => "create_user" } do |f| %>
    <h2>Signup</h2>
    <p>Create a new account</p>
    <% if @user.errors.any? %>
      <div id="errors">
        <h3>Signup failed!</h3>
        <ul class="errors small">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <label>Username
      <span class="small">Enter a unique username</span>
    </label>
    <%= f.text_field :username, :placeholder => "Username" %>

    <label>Email
      <span class="small">Enter a valid email</span>
    </label>
    <%= f.text_field :email, :placeholder => "Email" %>

    <label>Password
      <span class="small">Enter a strong password</span>
    </label>
    <%= f.password_field :password, :placeholder => "Password" %>

    <label>Confirm Password
      <span class="small">Confirm your password</span>
    </label>
    <%= f.password_field :password_confirmation, :placeholder => "Confirm Password" %>

    <%= f.submit "Signup" %>
  <% end %>
</div>
