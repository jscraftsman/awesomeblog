class UsersController < ApplicationController
  def index
    @user = User.new
  end

  def create_user
    @user = User.new(params[:user])
    if @user.save
      redirect_to index_path, :notice => "Account successfully created!"
    else
      render "index"
    end
  end


  def login_user
    @user = User.new
    #user = User.authenticate(params[:username], params[:password])
    user = User.authenticate("aw", "12345")
    
    if user
      session[:user_id] = user.id
      redirect_to index_path, :notice => "Login successful!"
    else
      flash.now.alert = "Invalid username or password! - #{params[:username]} + #{params[:password]}"
      render "index"
    end
  end

  def destroy
    session[:user_id] = nil
    redirect_to index_path, :notice => "Logged out!"
  end
end
